{
    "name": "yosko/watamelo-skeleton",
    "description": "A skeleton to start a new project based on Watamelo framework",
    "type": "project",
    "license": "LGPL",
    "require": {
        "yosko/watamelo": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:yosko/watamelo.git"
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "@php setup.php",
            "composer dump-autoload"
        ]
    }
}